<section class="box">
      <h3>New Study</h3>
        <%= form_for :Studies, :url => {:controller => "studies" , :action => "create" }, :html => {:class => "nifty_form"} do |st| %>
        <%= st.hidden_field :id , :value => @scount %> <br />
        <div class="smallbox">Number :</div><div class="smallbox"> <%=  st.collection_select(:number, Subgroup.all, :number, :number)  %></div>
        <div class="smallbox">Name :</div><div class="smallbox"><%= st.text_field :name %></div>
        <div class="smallbox">Blinded</div><div class="smallbox"><%= st.check_box :blinded %></div>
        <div class="smallbox">Privotal</div><div class="smallbox"><%= st.check_box :privotal %></div>
        <div class="smallbox">Controlled</div><div class="smallbox"><%= st.check_box :controlled %></div>
        <div class="smallbox">Length :</div><div class="smallbox"><%= st.text_field :study_length %></div>
        <div class="smallbox">Intervention arm :</div><div class="smallbox"><%= st.text_field :interventionsarm %></div>
        <div class="smallbox">Evidence </div><div class="smallbox"><%= st.text_field :evidence %></div>
        <%= st.submit %>
      <% end %>
</section>
